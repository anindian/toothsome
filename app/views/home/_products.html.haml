%section
  - if @product_prices.blank?
    %section
      %h4 Sorry,no results found.
  - else
    %ul.thumbnails
      - @product_prices.each do |prod|
        %li.span4
          %a{:href => product_info_path(prod.id) , :class => 'thumbnail'}
            %img{"data-src" => "holder.js/300x200", :alt => "300x200", :style =>"width: 300px; height: 200px;", :src => image_path("#{prod.product.image_url}")}
